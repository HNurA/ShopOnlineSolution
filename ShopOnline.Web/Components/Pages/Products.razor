@page "/"
@page "/products"
@attribute [StreamRendering]
@rendermode InteractiveServer
@inherits ProductsBase

@if (!isLoaded && ErrorMessage == null)
{
    <div class="text-center mt-5">
        <DisplaySpinner />
        <p class="mt-3">Loading products...</p>
    </div>
}
else if (ErrorMessage != null)
{
    <div class="alert alert-danger">@ErrorMessage</div>
}
else
{
    <h3 class="mb-4">Products</h3>

    @if (Products != null && Products.Count() > 0)
    {
        var productGroups = GetGroupedProductsByCategory();
        @foreach (var productGroup in productGroups)
        {
            <h4 class="mt-4 mb-3">@GetCategoryName(productGroup)</h4>
            <div class="row">
                @foreach (var product in productGroup)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 mb-3">
                        <a href="/ProductDetails/@product.Id" class="text-decoration-none">
                            <div class="card h-100 shadow-sm">
                                <img class="card-img-top" src="@product.ImageURL" alt="@product.Name" style="height: 200px; object-fit: cover;">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">@product.Name</h5>
                                    <p class="card-text mt-auto">
                                        <b>@product.Price.ToString("C")</b>
                                    </p>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        }
    }
    else
    {
        <div class="alert alert-info">
            <p>No products available at the moment.</p>
        </div>
    }
}